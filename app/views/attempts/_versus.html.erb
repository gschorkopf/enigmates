<div class="span5">
  <h2><%= @puzzle %></h2>
  <h4>(<%= @puzzle.topic.titleize %>, <%= @attempt.mode.capitalize %>)</h4>
  <form action="/invites/<%= @attempt.id %>" method="post" data-remote="true"> 
    <input type="text" id="friend" name="name" autocomplete="off" placeholder="Enter a friend's name!"></input>
  </form>
</div>

<% @attempt.users.each_with_index do |user, index| %>
  <div class="span1">
    <h4><span id="score<%=index%>"><%= @attempt.player_score(user.id) %></span> / <%= @puzzle.pieces.count %></h4>
    <p><%= user %>'s Score</p>
  </div>
<% end %>

<%= render "attempts/column_filler" %>
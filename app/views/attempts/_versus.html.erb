<div class="span5">
  <h2><%= @puzzle %></h2>
  <h4>(<%= @puzzle.topic.titleize %>, <%= @attempt.mode.capitalize %>)</h4>
  <form action="/invites/<%= @attempt.id %>" method="post" data-remote="true"> 
    <input type="text" id="friend" name="name" autocomplete="off" placeholder="Enter a friend's name!"></input>
  </form>
</div>

<div class="span2">
  <h2><span id="your_score"><%= @attempt.guesses.count %></span> / <%= @puzzle.pieces.count %></h2> correct
  <p>Your Score</p>
</div>

<div class="span2">
  <h2><span id="opponent_score"><%= @attempt.guesses.count %></span> / <%= @puzzle.pieces.count %></h2> correct
  <p>Opponent Score</p>
</div>
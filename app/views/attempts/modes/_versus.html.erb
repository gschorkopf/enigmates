<% @attempt.users.uniq.each_with_index do |user, index| %>
  <div class="span1">
    <h4 class="score-color-<%=index%>"><span id="score<%=index%>"><%= @attempt.player_score(user.id) %></span> / <%= @puzzle.pieces.count %></h4>
    <p class="score-color-<%=index%>"><%= user %>'s Score</p>
  </div>
<% end %>

<%= render "attempts/column_filler" %>